@model MyPortfolioDTO

@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Portfolio- Projects</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Edit Project Page</div>
                    </div>
                    <div class="card-body">

                        <form method="post" asp-action="update-portfolio">
                            <input type="hidden" asp-for="Id" />
                            <label>Title</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Sub Title</label>
                            <input type="text" asp-for="SubTitle" class="form-control" />
                            <br />
                            <label>Description</label>
                            <textarea rows="4" class="form-control" asp-for="Description"></textarea>
                            <br />
                            <label>Image Url</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br />
                            <label>Project Url</label>
                            <input type="text" asp-for="Url" class="form-control" />
                            <br />
                            <button class="btn btn-primary">Edit Project</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>