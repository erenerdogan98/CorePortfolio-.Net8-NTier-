@model ExperienceDTO

@{
	ViewData["Title"] = "UpdateExperience";
	Layout = "~/Views/Layout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Experiences</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Update Experience Page</div>
					</div>
					<div class="card-body">

						<form method="post" asp-action="update-experience">
							<input type="hidden" asp-for="Id" />
							<label>Company Information</label>
							<input type="text" asp-for="Head" class="form-control" />
							<br />
							<label>Position</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Date Range</label> 
							<input type="text" asp-for="Date" class="form-control" />
							<br />
							<label>Description</label>
							<textarea rows="4" class="form-control" asp-for="Description"></textarea>
							<br />
							<button class="btn btn-warning">Edit Experience</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>