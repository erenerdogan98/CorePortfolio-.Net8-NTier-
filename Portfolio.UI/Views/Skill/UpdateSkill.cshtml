@model SkillDTO

@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Update Skills</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Update Skills Page</div>
                    </div>
                    <div class="card-body">

                        <form method="post" asp-action="update-portfolio">
                            <input type="hidden" asp-for="Id" />
                            <label>Title</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Sub Title</label>
                            <input type="text" asp-for="Level" class="form-control" />
                            <br />
                            <button class="btn btn-primary">Update Skills</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>