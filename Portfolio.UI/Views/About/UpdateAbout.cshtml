@model AboutDTO

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Abouts</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Edit About Page</div>
                    </div>
                    <div class="card-body">

                        <form method="post" asp-action="update-about">
                            <input type="hidden" asp-for="Id" />
                            <label>Title</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Sub Description</label>
                            <input type="text" asp-for="SubDescription" class="form-control" />
                            <br />
                            <label>Detail</label>
                            <textarea rows="4" class="form-control" asp-for="Details"></textarea>
                            <br />
                            <button class="btn btn-primary">Edit About</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>