@model FeatureDTO

@{
    ViewData["Title"] = "AddFeature";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Features</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Adding Feature Page</div>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <label>Title</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Description</label>
                            <textarea rows="4" class="form-control" asp-for="Description"></textarea>
                            <br />
                            <button class="btn btn-primary">Add Feature</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>