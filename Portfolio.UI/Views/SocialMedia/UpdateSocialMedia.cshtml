@model SocialMedia

@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Edit SocialMedia</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Edit Social Media Page</div>
                    </div>
                    <div class="card-body">

                        <form method="post" asp-action="update-socialmedia">
                            <input type="hidden" asp-for="Id" />
                            <label>Title</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Icon</label>
                            <input type="text" asp-for="Icon" class="form-control" />
                            <br />
                            <label>Icon</label>
                            <input type="text" asp-for="Url" class="form-control" />
                            <br />
                            <button class="btn btn-primary">Add Social Media</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>